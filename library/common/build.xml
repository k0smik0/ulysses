<project name="Ulysses" default="jars">
	<!-- change this as your own	-->
	
	<property name="name" value="${ant.project.name}"/>
	<property name="user" value="k0smik0"/>
	<property name="vendor" value="Massimiliano Leone - k0smik0"/>
	<property name="version" value="0.1"/>
	<property name="copyright" value="Copyleft 2012 Massimiliano Leone - massimiliano.leone@iubris.net"/>
	<property name="license.file" value="COPYING.txt"/>
	<property name="license.url" value="http://www.gnu.org/licenses/lgpl.txt"/>
	<property name="docurl" value="https://github.com/k0smik0/ulysses"/>
	
	<!-- change here with actual -->
	<property name="android-sdk-target-version" value="22"/>
	
	<!--don't change below-->
	<property environment="env" />
	<condition property="sdk.dir" value="${env.ANDROID_HOME}">
	  <isset property="env.ANDROID_HOME" />
	</condition>
	<property name="android-path" value="${sdk.dir}" />

			
	<property name="libs-dir" value="libs"/>
	<property name="main-libs-dir" value="libs"/>
	<property name="extra-libs-dir" value="libs_extra"/>
	
	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />	
	
	<property name="jar-common.file" value="${build.dir}/jars/ulysses-common.jar" />
	<property name="jar-roboguice.file" value="${build.dir}/jars/ulysses-roboguiced.jar" />
	
	<path id="classpath-android">
		<fileset dir="${android-path}/platforms/android-${android-sdk-target-version}/">
			<include name="android*.jar"/>
		</fileset>
		<fileset dir="${android-path}/add-ons/addon-google_apis-google-${android-sdk-target-version}/libs/">
			<include name="maps.jar"/>
		</fileset>
	</path>
				
	<path id="classpath-common">
		<path refid="classpath-android"/>
		<fileset dir="${main-libs-dir}">
			<include name="*.jar"/>
			<exclude name="robo*.jar"/>
			<exclude name="*guice*.jar"/>
		</fileset>
		<fileset dir="${extra-libs-dir}">
			<include name="*.jar"/>
			<exclude name="robo*.jar"/>
			<exclude name="*guice*.jar"/>
		</fileset>
	</path>
		
	<path id="classpath-roboguice">
		<path refid="classpath-common"/>
		<fileset dir="${main-libs-dir}">
			<include name="*guice*.jar"/>
			<include name="robo*.jar"/>
		</fileset>
		<fileset dir="${extra-libs-dir}">
			<include name="*.jar"/>
			<exclude name="robo*.jar"/>
			<exclude name="*guice*.jar"/>
		</fileset>
		<fileset dir="${build.dir}/jars">
			<include name="ulysses-common.jar"/>
		</fileset>
	</path>
	
	<target name="clean-common">
		<delete dir="${build.dir}/classes/common"/>
	</target>
	<target name="clean-roboguice">
		<delete dir="${build.dir}/classes/roboguiced"/>
	</target>
	<target name="clean-jars">
  	<delete file="${jar-common.file}"/>
		<delete file="${jar-robo.file}"/>
  </target>
	
	<target name="clean" depends="clean-common, clean-roboguice"/>	
	
	<target name="get-real-dependencies">
    <!-- diane -->
    <get dest="${libs-dir}">
      <url url="https://github.com/k0smik0/diane/blob/master/library/common/build/jars/diane-common.jar?raw=true"/>
      <url url="https://github.com/k0smik0/diane/blob/master/library/utils/roboguiced/build/jars/diane-roboutils.jar?raw=true"/>
			<url url="https://github.com/k0smik0/diane/blob/master/library/utils/roboguiced/build/jars/diane-robotask.jar?raw=true"/>
    </get>
    <!-- polaris -->
    <get dest="${libs-dir}">
        <url url="https://github.com/k0smik0/polaris/blob/master/build/jars/polaris-core.jar"/>
        <url url="https://github.com/k0smik0/polaris/blob/master/build/jars/polaris-utils.jar"/>
    </get>
    <!-- kusor -->
    <get dest="${libs-dir}" >
        <url url="https://github.com/k0smik0/kusor/blob/master/build/jars/kusor-common.jar" />
        <url url="https://github.com/k0smik0/kusor/blob/master/build/jars/kusor-roboguiced.jar" />
    </get>
    <!-- mirroringexception -->
    <get dest="${libs-dir}">
        <url url="https://github.com/k0smik0/mirroringexception/raw/master/jars/mirroringexception.jar"/>
    </get>
    <!-- (robo)enhancedasynctask -->
    <get dest="${libs-dir}">
     <url url="https://github.com/k0smik0/enhancedsafeasynctask/blob/master/roboguiced/library/build/jars/roboenhancedasynctask.jar?raw=true"/>
    </get>
    <!-- socrates -->
    <get dest="${libs-dir}">
        <url url="https://github.com/k0smik0/socrates/blob/master/library/build/jars/socrates-base.jar?raw=true"/>
				<url url="https://github.com/k0smik0/socrates/blob/master/library/build/jars/socrates-roboguiced.jar?raw=true"/>
        <url url="https://github.com/k0smik0/socrates/blob/master/library/build/jars/socrates-events.jar?raw=true"/>
        <url url="http://central.maven.org/maven2/com/google/api-client/google-api-client/1.7.0-beta/google-api-client-1.7.0-beta.jar"/>
        <url url="http://central.maven.org/maven2/com/google/api-client/google-api-client-android2/1.7.0-beta/google-api-client-android2-1.7.0-beta.jar"/>
        <url url="http://central.maven.org/maven2/com/google/http-client/google-http-client/1.7.0-beta/google-http-client-1.7.0-beta.jar"/>
        <url url="http://moneydance-forecaster.googlecode.com/svn-history/r95/trunk/lib/jackson-mini-1.9.2.jar"/>
    </get>
    <!-- roboguice -->
    <get dest="${libs-dir}">
      <url url="http://dependency-shot.googlecode.com/files/javax.inject.jar"/>
      <url url="http://central.maven.org/maven2/org/sonatype/sisu/sisu-guice/3.2.0/sisu-guice-3.2.0.jar"/>
      <url url="http://repo1.maven.org/maven2/org/roboguice/roboguice/2.0/roboguice-2.0.jar"/>
    </get>
  </target>
		
	<target name="compile-common">
		<mkdir dir="${build.dir}/classes/common"/>
		<javac destdir="${build.dir}/classes/common" includeantruntime="false">
			<src path="${src.dir}/common" />
			<include name="**/*.java"/>
			<classpath refid="classpath-common"/>
		</javac>
	</target>
	<target name="compile-roboguice" depends="compile-common">
		<mkdir dir="${build.dir}/classes/roboguiced"/>
		<javac destdir="${build.dir}/classes/roboguiced" includeantruntime="false">
			<src path="${src.dir}/roboguiced" />
			<include name="**/*.java"/>
			<classpath refid="classpath-roboguice"/>			
		</javac>
	</target>
			
	<target name="jar-common" depends="compile-common">
		<mkdir dir="${build.dir}/jars/"/>
		<jar destfile="${jar-common.file}">
			<fileset dir="${build.dir}/classes/common"/>
			<manifest>
				<attribute name="Built-By" value="${user}" />    
        <attribute name="Bundle-Name" value="${name}" />
      	<attribute name="Bundle-Copyright" value="${copyright}" />
      	<attribute name="Bundle-Vendor" value="${vendor}" />
        <attribute name="Bundle-Version" value="${version}" />
        <attribute name="Bundle-License" value="${license.url} " />
        <attribute name="Build-DocURL" value="${docurl}" />	      
			</manifest>			
			<metainf dir="." includes="${license.file}"/>
		</jar>
		<antcall target="clean-common"/>
	</target>
	
	<target name="jar-roboguice" depends="jar-common,compile-roboguice">
		<mkdir dir="${build.dir}/jars/"/>
		<jar destfile="${jar-roboguice.file}">
			<fileset dir="${build.dir}/classes/roboguiced"/>
			<manifest>
				<attribute name="Built-By" value="${user}" />    
        <attribute name="Bundle-Name" value="${name}" />
      	<attribute name="Bundle-Copyright" value="${copyright}" />
      	<attribute name="Bundle-Vendor" value="${vendor}" />
        <attribute name="Bundle-Version" value="${version}" />
        <attribute name="Bundle-License" value="${license.url} " />
        <attribute name="Build-DocURL" value="${docurl}" />	      
			</manifest>			
			<metainf dir="." includes="${license.file}"/>
		</jar>
		<antcall target="clean-roboguice"/>
	</target>
	
	<target name="jars" depends="clean-jars, jar-common, jar-roboguice"/>
		
</project>
