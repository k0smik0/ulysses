<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_item_border"
    android:descendantFocusability="blocksDescendants"
    android:tag="list_row" >

				android:background="@drawable/row_item_border"
	
	 <!-- android:background="#ffffff" -->

	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="48dp"
		android:minHeight="48dp"
		android:layout_marginRight="5dip"
		android:contentDescription="the place type icon"
		android:focusable="false" 
		android:focusableInTouchMode="false"
		/>
	<!-- android:background="@drawable/row_item_border" -->	

	<!-- <LinearLayout
		android:id="@+id/RightLinearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_toRightOf="@id/icon"
		android:layout_alignTop="@id/icon"> -->
	
		<include 
			android:id="@+id/row_name_included"
			layout="@layout/frame_name"
			android:layout_width="wrap_content"
			android:minWidth="10dp"
			android:layout_height="wrap_content"
			
			android:layout_alignTop="@id/icon"
			android:layout_toRightOf="@id/icon"
			android:focusable="false"
			android:focusableInTouchMode="false"			
			/>
		<include
			android:id="@+id/row_address_included"
			layout="@layout/frame_address"
			android:layout_width="wrap_content"
			android:minWidth="10dp"
			android:layout_height="wrap_content"
			
			android:layout_toRightOf="@id/icon"
			android:layout_below="@id/row_name_included"
			
			/>
		<include
			android:id="@+id/row_distance_included"
			layout="@layout/frame_distance"
			android:layout_width="wrap_content"
			android:minWidth="10dp"
			android:layout_height="wrap_content"
			
			android:layout_toRightOf="@id/icon"
			android:layout_below="@id/row_address_included"
			android:focusable="false" 
			android:focusableInTouchMode="false"
			android:background="@drawable/row_item_border"
			/>
		
		<include
			android:id="@+id/row_ratingbar_included"
			layout="@layout/frame_ratingbar"
			android:layout_width="wrap_content"
			android:minWidth="10dp"
			android:layout_height="wrap_content"			
			
			android:layout_toRightOf="@id/icon"
			android:layout_below="@id/row_distance_included"
			android:focusable="false"
			android:focusableInTouchMode="false"
			/>
		<!-- android:background="@drawable/row_item_border" -->
		
		<include
			layout="@layout/frame_ratingtext"
			android:layout_toRightOf="@id/row_ratingbar_included"
			android:layout_alignTop="@id/row_ratingbar_included"
			android:layout_marginTop="-2dp"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:minWidth="10dp"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:background="@drawable/row_item_border"
			/>
		
		<ImageView
			android:id="@+id/arrow"
			android:src="@drawable/red_right_arrow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:minWidth="48dp"
			android:minHeight="48dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dip"			
			android:focusable="false"
			android:focusableInTouchMode="false"
			
			android:contentDescription="right arrow"
		/>
