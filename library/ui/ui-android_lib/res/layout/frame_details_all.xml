<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- android:background="#ffffff" -->
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<include
			android:id="@+id/name_included"
			layout="@layout/frame_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="10dp"/>
		
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		
			<ImageView
				android:id="@+id/photo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"				
				android:minHeight="128dp"
				android:minWidth="128dp"
				android:layout_below="@id/name_included"
				android:src="@android:drawable/ic_menu_camera" 
				android:contentDescription="photo"/>
			
			<include
				android:id="@+id/address_included"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/photo"			
				android:layout_toRightOf="@id/photo"
				android:layout_marginTop="5dp"
				layout="@layout/frame_address" />
			
			<include
				android:id="@+id/distance_included"
				android:layout_toRightOf="@id/photo"
				android:layout_below="@id/address_included"
				android:layout_marginTop="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/frame_distance" />
	
			<include
				android:id="@+id/ratingbar_included"
				layout="@layout/frame_ratingbar"
				android:layout_toRightOf="@id/photo"
				android:layout_below="@id/distance_included"
				android:layout_marginTop="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<include
				layout="@layout/frame_ratingtext"
				android:layout_toRightOf="@id/ratingbar_included"
				android:layout_alignTop="@id/ratingbar_included"
				android:layout_marginTop="-2dp"
				android:layout_marginLeft="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>
		
		<Button
			android:id="@+id/gplus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:text="@string/gplus"
			android:layout_gravity="center"
			android:textSize="15sp"
			android:textStyle="italic|bold"/>
		<!-- android:textColor="#ffffff"
			android:background="#aa0000"
			style="@style/ButtonLightOnDark" -->
		
		<include
			android:id="@+id/frame_line_included_1"
			layout="@layout/frame_line"
			android:layout_marginTop="1dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		
		<include 
			android:id="@+id/url_included"
			layout="@layout/frame_url"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>
		
		<include
			android:id="@+id/frame_line_included_2"
			layout="@layout/frame_line"
			android:layout_marginTop="1dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		
		<include
			android:id="@+id/gallery_with_switcher_included"
			layout="@layout/frame_gallery_with_switcher"
			style="@style/label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>
		
		<include
			android:id="@+id/frame_line_included_3"
			layout="@layout/frame_line"
			android:layout_marginTop="1dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		
		<include
			layout="@layout/frame_street_view"
			android:id="@+id/street_view_included"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>
	</LinearLayout>
</FrameLayout>
